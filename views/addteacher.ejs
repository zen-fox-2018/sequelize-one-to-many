<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <div class="container">
      <h1 style="text-align: center">Add Teacher Data</h1>
      <table align="center">
        <form method="POST">
          <tr>
            <div class="form-group">
              <td><label for="firstName">First Name </label></td>
              <td>:</td>
              <td><input type="text" class="form-control" name="first_name" placeholder="Enter first name"></td>
            </div>
          </tr>
          <tr>
            <div class="form-group">
              <td><label for="lastName">Last Name </label></td>
              <td>:</td>
              <td><input type="text" class="form-control" name="last_name" placeholder="Enter first name"></td>
            </div>
          </tr>
          <tr>
            <div class="form-group">
              <td><label for="email">Email</label></td>
              <td>:</td>
              <td><input type="email" class="form-control" id="email" placeholder="Enter email" name="email"></td>
            </div>
          </tr>
          <tr>
            <td><label for="subject">Subject</label></td>
            <td>:</td>
            <td>
              <select name="SubjectId">
                <% dataSubject.forEach(item =>{ %>
                  <option value="<%= item.id%>">
                    <%= item.id%>. <%= item.subject_name%>
                  </option>
                <%})%>
              </select>
            </td>
          </tr>
          <tr>
            <td></td>
            <td></td>
            <td>
              <button type="submit" class="btn btn-default">Submit</button>
              <a href="/teachers" align="center">
                <button type="button" name="button">cancel</button>
            </td>
        </form>
      </table>
    </div>
  </body>
</html>
