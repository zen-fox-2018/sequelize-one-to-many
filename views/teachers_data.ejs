<!DOCTYPE html>
<html lang="en">
<head>
    <title>All Teachers Data</title>
    <style>
        table {
            border: 1px solid rgb(0, 0, 0);
            background: white;
        }
        th, td {
            padding: 15px;
            text-align: left;
            border: 1px solid rgb(0, 0, 0);
        }
        th {
            background: Yellow;
        }
        #Judul {
            color: greenyellow;
        }
    </style>
</head>
<body>
    <%- include('./partials/navbar.ejs') %>
    <h1> <%= title %> </h1>
    <h5><a href="/teacher/add">Add Teachers Data</a></h5>
    <table>
        <tr>
            <th>id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Subject</th>
            <th>Options</th>
        </tr>
        <% allData.forEach(e => { %>
        <tr>
            <td> <%= e.id %> </td>
            <td> <%= e.First_Name %> </td>
            <td> <%= e.Last_Name %> </td>
            <td> <%= e.Email %> </td>
            <% if (!e.SubjectId) {%>
            <td> unassigned </td>
            <% } else { %>
            <td><%= e.Subject.Subject_Name %></td>   
            <% } %>
            <td><a href="/teacher/edit/<%= e.id %>">Edit</a> | <a href="/teacher/delete/<%= e.id %>">Delete</a></td>
        </tr>
        <% }) %>
    </table>
</body>
</html>
