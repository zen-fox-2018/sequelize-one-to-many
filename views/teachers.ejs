<%- include('./partials/header.ejs') %>
<%- include('./partials/sidebar.ejs') %>
<%- include('./partials/mainHeader.ejs') %>
                        <div class="row">
                            <!-- Textual inputs start -->
                            <div class="col-12 mt-5">
                                <div class="card">
                                  <div class="card-body">
                                    <h4 class="header-title"><%= title %></h4>
                                    <div class="single-table">
                                        <div class="table-responsive">
                                            <table class="table text-center">
                                                <thead class="text-uppercase bg-light">
                                                    <tr>
                                                        <th scope="col">ID</th>
                                                        <th scope="col">First Name</th>
                                                        <th scope="col">Last Name</th>
                                                        <th scope="col">Email</th>
                                                        <th scope="col">Subject</th>
                                                        <th scope="col">Action</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                  <% if (teachers.length) { %>
                                                    <% teachers.forEach( (teacher, i) => { %>
                                                      <tr>
                                                        <th scope="row"><%= i+1 %></th>
                                                        <td><%= teacher.firstName %></td>
                                                        <td><%= teacher.lastName %></td>
                                                        <td><%= teacher.email %></td>
                                                        <td><% if (teacher.SubjectId === null || teacher.SubjectId === 0) { %>
                                                            <strong>unassigned</strong>
                                                            <% } else { %>
                                                              <%= teacher.Subject.subjectName %>
                                                            <% } %>
                                                        </td>
                                                        <td>
                                                          <div class="btn-group mb-xl-3" role="group" aria-label="Basic example">
                                                            <a href="/teachers/edit/<%= teacher.id %>" class="btn btn-warning">Edit</a>
                                                            <a href="/teachers/delete/<%= teacher.id %>" class="btn btn-danger" onclick="return confirm('Are you sure to delete?')">Delete</a>
                                                          </div>
                                                        </td>
                                                      </tr>
                                                    <% }) %>
                                                  <% } else { %>
                                                    <tr>
                                                      <td colspan="6">Empty</td>
                                                    </tr>
                                                  <% } %>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                  </div>
                                </div>
                            </div>
                            <!-- Textual inputs end -->
                        </div>
<%- include('./partials/footer.ejs') %>
<%- include('./partials/script.ejs') %>
