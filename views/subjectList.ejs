<!DOCTYPE html>
<html lang="en">
<head>
  <title>Enrolled Student</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
</head>
<body>
  <div class="w-50 container">
    <br>
    <h1 align="center"><%= subjectName.subjectName%></h1>
    <h3 align="center"><a href="/subjects">return to subject list</a></h3>
    <table class="table">
      <thead >
        <tr>
          <th>Name</th>
          <th>Score</th>
        </tr>
      </thead>
      <tbody>
        <% data.forEach( a => { %>
          <tr> 
           <td> <%= a.Student.firstName + ' ' + a.Student.lastName %> </td>
            <% if ( !a.score ) { %>
             <td> <a href="/subjects/<%=a.SubjectId%>/give-score">Give Score</a></td>
            <% } else { %>
             <td> <%= a.score %> </td>
          </tr>
            <% }
        }) %>
        <tr>
          <td></td>
        </tr>
      </tbody>
    </table>
  </div>
</body>
</html>