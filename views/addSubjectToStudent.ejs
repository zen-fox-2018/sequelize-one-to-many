<!DOCTYPE html>
<html>
    <head>
        <title>Add Subject to Student</title>
        <%- include ./partials/style.ejs %>   
    </head>
    <body>
            <%- include ./partials/header.ejs %>
        <h1 >Add Subject to Student</h1>
        <h4 ><a href = "/students"  >All student data</a></h4>
        <form action="/students/<%= studentData.id %>/add-subject" method = "POST">
            <label for= "first_name"><b>First Name</b></label><br>
            <input size =50 type="text" name="first_name" value="<%= studentData.firstName %>"  required><br>
            <label for= "last_name"><b>Last Name</b></label><br>
            <input size =50 type="text" name="last_name" value="<%= studentData.lastName %>" required><br>
            <label for= "email"><b>Email</b></label><br>
            <input size =50 type="text" name="email" value="<%= studentData.email %>"  required><br>
            <label for="SubjectId"><b>Choose Subject</b></label><br>        
            <select name = "SubjectId">
                <% subjects.forEach(element=> { %>                             
                    <option size =50  value='<%= element.id %>'> <%= element.subjectName %></option>
                <%  }) %>
            </select> <br> <br>
        <button type="submit">Add Subject</button>
        </form>
    </body>
</html>