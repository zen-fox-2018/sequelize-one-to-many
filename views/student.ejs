<!DOCTYPE html>
<html lang="en">

  <%- include('./partials/header.ejs') %>

<body>

<%- include('./partials/navbar.ejs') %>
  
<div class="container-fluid text-center">    
  <div class="row content">
    <div class="col-sm-2 sidenav">
      <p><a href="#"></a></p>
      <p><a href="#"></a></p>
      <p><a href="#"></a></p>
    </div>
    <div class="col-sm-8 text-left"> 
      <h1>Student Data</h1>
      <center><a href="/students/add">Add Student</a></center>
      <table style="width:100%"  border="1">
        <tr>
          <th>Id</th>
          <th>First Name</th>
          <th>Last Name</th> 
          <th>Email</th>
          <th>Actions</th>
          <th>Option</th>
        </tr>
        <tr>
          <strong><%= info %></strong>
        </tr>
        <tr>
          <strong><%= err %></strong>
        </tr>
        <% dataSend.forEach(Data=> {%>
            <tr>
                <td><%= Data.id %> </td>
                <td><%= Data.firstName %></td>
                <td><%= Data.lastName %></td>
                <td><%= Data.email %></td>
                 <td>
                     <a href="/students/<%= Data.id %>/add-subject">Add Subject</a>
                 </td>
                <td>
                    <a href="/students/edit/<%= Data.id %>">Edit</a> | <a href="/students/delete/<%= Data.id %>"  onclick="return confirm('Are you sure to delete data ?')">Delete</a>
                </td>
            </tr>
        <% }) %>
      </table>
     </div>
     <%- include('./partials/footer.ejs') %>

</body>
</html>
