<!DOCTYPE html>
<html lang="en">
<head>
  <title>All Students</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
</head>
<body>
  <div>
    <%- include ./partials/header.ejs %>
  </div>
  <div>
    <h1 align="center">Students Data</h1>
    <h3 align="center"><a href="/students/add">add student</a></h3><br>
  </div>
  <div class="w-50 container">
    <table class ="table">
      <thead class="thead-dark">
        <tr>
          <th>ID</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Actions</th>
          <th>Options</th>
        </tr>
      </thead>
      <tbody>
        <% data.forEach( a => { %>
        <tr>
          <td><%= a.id %></td>    
          <td><%= a.firstName %></td>
          <td><%= a.lastName %></td>
          <td><%= a.email %></td>
          <td>
            <a href="/students/<%= a.id%>/add-subject"><button class="btn btn-success" type="button" name="addSubject" >Add Subject</button></a>
          </td>
          <td>
            <a href="/students/edit/<%= a.id%>"><button class="btn btn-warning" type="button" name="edit">Edit</button></a>
            <a href="/students/delete/<%= a.id%>" onclick="return confirm('Are You Sure?')"><button class="btn btn-danger" type="button" name="delete">Delete</button></a>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>